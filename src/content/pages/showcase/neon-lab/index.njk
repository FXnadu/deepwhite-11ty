<script type="module">
    const canvas = document.getElementById("glitchCanvas");
    const ctx = canvas.getContext("2d");
    const resize = () => {
        const ratio = window.devicePixelRatio || 1;
        canvas.width = canvas.clientWidth * ratio;
        canvas.height = canvas.clientHeight * ratio;
        ctx.scale(ratio, ratio);
    };

    let tick = 0;
    const draw = () => {
        const { width, height } = canvas;
        ctx.clearRect(0, 0, width, height);
        const stripes = 30;
        for (let i = 0; i < stripes; i++) {
            const y = (i / stripes) * height;
            const hue = (tick + i * 5) % 360;
            ctx.fillStyle = `hsla(${hue}, 80%, 60%, 0.12)`;
            ctx.fillRect(0, y, width, height / stripes + 1);

            const glitchWidth = (Math.sin(tick / 20 + i) + 1) * 0.5 * width * 0.4;
            const glitchX = Math.random() * (width - glitchWidth);
            ctx.fillStyle = `hsla(${(hue + 120) % 360}, 90%, 65%, 0.45)`;
            ctx.fillRect(glitchX, y, glitchWidth, height / stripes * 0.8);
        }
        tick += 1;
        requestAnimationFrame(draw);
    };

    resize();
    draw();
    window.addEventListener("resize", resize);
</script>

