---
layout: "base.njk"
showFloatingActions: true 
---
<article class="post">
    <header class="post-full-header">
    
        <h1 class="post-full-title" data-pagefind-meta="title">{{ title }}</h1>

        <p class="post-full-meta">发布于 {{ date | readableDate }}</p>
    </header>

    <section class="post-content">
        {{ content | safe }}
    </section>
</article>
