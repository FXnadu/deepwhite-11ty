---
layout: "base.njk"
showFloatingActions: true
islands:
  - site
  - post
---
<article class="post">
    <header class="post-full-header">
    
        <h1 class="post-full-title">{{ title }}</h1>

        {% set readingMinutes = (content | readingMinutes) or 1 %}
        <p class="post-full-meta">
            发布于 {{ date | readableDate }}
            ·
            {% if readingMinutes <= 1 %}
                约 1 分钟
            {% else %}
                约 {{ readingMinutes }} 分钟
            {% endif %}
        </p>
    </header>

    <section class="post-content">
        {{ content | safe }}
    </section>
</article>

<nav class="post-toc-floating hidden" id="post-toc" aria-label="文章目录">
    <div class="toc-header">
        <div class="toc-title">目录</div>
    </div>
    <ul class="toc-list" id="toc-list"></ul>
</nav>
<button class="toc-toggle-btn toc-toggle-btn-floating" id="toc-toggle-btn-floating" aria-label="显示目录" title="显示目录">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
    </svg>
</button>
